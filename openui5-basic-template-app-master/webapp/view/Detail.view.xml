<mvc:View controllerName="sap.ui.demo.basicTemplate.controller.Detail"
	xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout">
	<Page title="{i18n>detailPageTitle}">
		<Panel headerText="{i18n>detailPanelTitle}">
			<Button text="Cofnij" press="onBack" icon="sap-icon://navigation-left-arrow" />
			<content>
				<l:VerticalLayout class="sapUiContentPadding"
					width="100%">
					<FlexBox height="50px" alignItems="Start" justifyContent="Center">
						<items>
							<Input id="Index" value="{client>Indeks}" description="Indeks"
								enabled="true" width="250px" editable="false" />
						</items>
					</FlexBox>
					<FlexBox height="50px" alignItems="Start" justifyContent="Center">
						<items>
							<Input id="Name" value="{client>Name}" description="Imię"
								enabled="true" width="250px" />
						</items>
					</FlexBox>

					<FlexBox height="50px" alignItems="Start" justifyContent="Center">
						<items>
							<Input id="Surname" value="{client>Surname}" description="Nazwisko"
								enabled="true" width="250px" />
						</items>
					</FlexBox>
					<FlexBox height="50px" alignItems="Start" justifyContent="Center">
						<items>
							<Input id="Age" value="{client>Age}" description="Wiek"
								enabled="true" width="250px" />
						</items>
					</FlexBox>

					<FlexBox height="50px" alignItems="Start" justifyContent="Center">
						<items>
							<Button type="Accept" text="Zapisz" press="onSave"
								icon="sap-icon://save" width="150px" />
						</items>
					</FlexBox>
					<FlexBox height="50px" alignItems="Start" justifyContent="Center">
						<items>
							<Button type="Reject" text="Usuń" press="onDelete"
								icon="sap-icon://delete" width="150px" />
						</items>
					</FlexBox>
				</l:VerticalLayout>

			</content>
		</Panel>
	</Page>

</mvc:View>
