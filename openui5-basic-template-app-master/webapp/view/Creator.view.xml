<mvc:View controllerName="sap.ui.demo.basicTemplate.controller.Creator"
	xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout">
	<Page title="{i18n>creatorPageTitle}">
		<Panel headerText="{i18n>creatPanelTitle}">
			<Button text="Cofnij" press="onBack" icon="sap-icon://navigation-left-arrow" />
			<content>
				<l:VerticalLayout class="sapUiContentPadding"
					width="100%">

					<FlexBox height="50px" alignItems="Start" justifyContent="Center">
						<items>
							<Input id="Name2" description="ImiÄ™" enabled="true" width="250px" />
						</items>
					</FlexBox>

					<FlexBox height="50px" alignItems="Start" justifyContent="Center">
						<items>
							<Input id="Surname2" description="Nazwisko" enabled="true"
								width="250px" />
						</items>
					</FlexBox>
					<FlexBox height="50px" alignItems="Start" justifyContent="Center">
						<items>
							<Input id="Age2" description="Wiek" enabled="true" width="250px" />
						</items>
					</FlexBox>

					<FlexBox height="50px" alignItems="Start" justifyContent="Center">
						<items>
							<Button text="Zapisz" type="Accept" press="onSave"
								icon="sap-icon://save" width="150px" />
						</items>
					</FlexBox>
				</l:VerticalLayout>
			</content>
		</Panel>
	</Page>

</mvc:View>
